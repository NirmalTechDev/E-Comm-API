<%- include('header') %>

<style>
  th,td{
    padding:10px;
    margin:5px;
  }
  table{
    width: 500px;
    /* align-self:center; */
  }
  img{
    height: 100px;
    width: 100px;
  }
  button{
  font-weight: 900;
  color: white;
  }
</style>

    <h1 class="text-center m-5" > Categorys of e-commerce app </h1>
<table border="5" align="center" >
  <tr style="background-color: rgba(138, 112, 112,0.4)">
    <th>No.</th>
    <th>Category</th>
    <th>Images</th>
    <th>update</th>
    <th>delete</th>
  </tr>
  <% data.forEach(data => { %>
    <tr>
      <td>
        <%= data._id %>
      </td>
      <td>
        <%= data.cat_name %>
      </td>
      <td>
          <img src="<%= data.cat_image%>" alt="image not found..." >
      </td>
      <td>
          <button style="background-color:rgb(82, 80, 80);">update</button>
      </td>
      <td>
          <button style="background-color:rgb(167, 46, 46);">delete</button>
      </td>
    </tr>
  <% }) %>
</table>

<%- include('footer') %>